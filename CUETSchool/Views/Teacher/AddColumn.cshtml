@{
    ViewData["Title"] = "Add Column";
}

<h2>Add Column</h2>

<form asp-action="SaveColumn" asp-controller="Teacher" method="post">
    <input type="hidden" name="className" value="@ViewBag.ClassName" />
    <input type="hidden" name="subject" value="@ViewBag.Subject" />

    <div>
        <label>Column Name:</label>
        <input type="text" name="columnName" required />
    </div>

    <div>
        <label>Maximum Marks:</label>
        <input type="number" name="maxMarks" required />
    </div>

    <div>
        <label>Percentage Contribution to Final Score:</label>
        <input type="number" name="percentage" step="0.1" required />%
    </div>

    <button type="submit">Submit</button>
</form>
